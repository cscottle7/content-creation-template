# Production Environment Variables for The Bigger Boss
# Copy this file to .env.production and fill in actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://thebiggerboss.com.au
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_APP_VERSION=1.0.0

# Analytics and Tracking
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# A/B Testing
NEXT_PUBLIC_AB_TEST_ENABLED=true

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@thebiggerboss.com.au
SMTP_PASS=your-app-password
SMTP_FROM=noreply@thebiggerboss.com.au

# Lead Magnet Configuration
LEAD_MAGNET_SMTP_HOST=smtp.gmail.com
LEAD_MAGNET_SMTP_PORT=587
LEAD_MAGNET_SMTP_USER=leads@thebiggerboss.com.au
LEAD_MAGNET_SMTP_PASS=your-leads-email-password

# Security
NEXTAUTH_SECRET=your-secure-secret-key-here-minimum-32-characters
NEXTAUTH_URL=https://thebiggerboss.com.au

# Error Tracking and Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=thebiggerboss

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@host:port/database

# Third-party Integrations
# HUBSPOT_API_KEY=your-hubspot-api-key
# MAILCHIMP_API_KEY=your-mailchimp-api-key
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# Rate Limiting (Redis - optional)
# REDIS_URL=redis://localhost:6379

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_RESOURCES=true

# Performance Monitoring
NEXT_PUBLIC_ENABLE_WEB_VITALS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Content Security
CONTENT_SECURITY_POLICY_NONCE=your-csp-nonce

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-for-verifying-incoming-requests